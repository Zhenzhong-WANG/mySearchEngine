<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wonggigi.dao.TestUserDao">

    <select id="getUser" resultType="TestUser">
        SELECT *
        FROM testuser
    </select>

    <insert id="addUser" parameterType="TestUser" >
        INSERT INTO testuser(username,password)
        VALUE (#{username},#{password})
    </insert>

    <update id="updateUser" parameterType="TestUser" >
        UPDATE testuser SET password =(#{password}) WHERE username =(#{username})
    </update>

    <delete id="deleteUser" parameterType="TestUser">
         DELETE from testuser  WHERE username =(#{username})
    </delete>
</mapper>