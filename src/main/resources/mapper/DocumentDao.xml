<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wonggigi.dao.DocumentDao">

    <insert id="addDocument" parameterType="Document" >
        INSERT INTO document_table(url,title,path)
        VALUE (#{url},#{title},#{path})
    </insert>

    <select id="getDocumentById" resultType="Document" parameterType="int">
        SELECT *
        FROM document_table WHERE id=#{id}
    </select>

    <select id="getDocumentByUrl" resultType="Document" parameterType="String">
        SELECT *
        FROM document_table WHERE url=#{url}
    </select>
</mapper>